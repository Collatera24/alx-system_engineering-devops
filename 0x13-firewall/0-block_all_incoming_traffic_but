echo -e "Updating\n"

sudo apt-get update

echo -e "Initializing ufw\n"

sudo apt-get install -y ufw

echo -e "configuring ufw...\n"

# Allow Outgoing and deny Incoming
sudo ufw default deny incoming
sudo ufw default allow outgoing

# Allow ports
sudo ufc allow 22
sudo ufc allow 80
sudo ufc allow 443

# Enable Fire wall
sudo ufw enable

echo -e "Process Completed.\n"
